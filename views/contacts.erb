<h2>Отправить гонца с новостями</h2>

<form action="/contacts" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Ваш Email" name="email" value="<%= @email %>">
  </div>

  <div class="form-group">
    <label for="exampleInput">Сообщение</label>
    <textarea class="form-control" rows="3" placeholder="Ваше сообщение" id="exampleInput" name="message" required ></textarea>
  </div>


  <button type="submit" class="btn btn-default">Отправить</button>
</form>