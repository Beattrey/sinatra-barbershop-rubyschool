<h3>Передайте контакты писарю</h3>

<form action="/visit" method="POST">

  <div class="form-group">
    <label for="myname">Барин</label>
    <input type="text" name="username" class="form-control" id="myname" placeholder="Введите имя барина" value="<%= @username %>">
  </div>

  <div class="form-group">
    <label for="myphone">Номер гонца</label>
    <input type="text" name="phone" class="form-control" id="myphone" placeholder="Введите контактный номер" value="<%= @phone %>">
  </div>

  <div class="form-group">
    <label for="mydate">Дата и время приема</label>
    <input type="text" name="date" class="form-control" id="mydate" placeholder="Введите желаемую дату" value="<%= @date %>">
  </div>

  <div class="form-group">
    <label for="myselect">Цирюльник</label>
    <select class="form-control" name="barber" id="myselect">
      <option <%= @barber == 'Walter White' ? 'selected' : '' %>>Walter White</option>
      <option <%= @barber == 'Jessie Pinkman' ? 'selected' : '' %>>Jessie Pinkman</option>
      <option <%= @barber == 'Gus Fring' ? 'selected' : '' %>>Gus Fring</option>
    </select>
  </div>

  <div class="form-group">
    <label for="colorpick">В какой цвет красим: </label>

    <select name="colorpicker" id="colorpick">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>


  <button type="submit" class="btn btn-primary">Передать</button>
</form>

<script>
    $('select[name="colorpicker"]').simplecolorpicker();
</script>